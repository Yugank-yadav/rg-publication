{
  "root": true,
  "extends": ["next/core-web-vitals"],
  "rules": {
    "@next/next/no-img-element": "off",
    "react/no-unescaped-entities": "off",
    "react/jsx-no-undef": "error",
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "@next/next/no-html-link-for-pages": "off"
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
